<div class="">
    <h2>My Interests</h2>
    <div>
    <% unless @errors.nil? %>
        <% @errors.each do |key,value|%>
            <p class="error-message black"> <%= key %> <%= value[0] %> </p>
        <% end %>
    <% end %>
       <% @rides.each do |ride| %>
        <div class="row">
            <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                <span class="card-title">
                  <center> Ride <%= ride.ride_type %> </center>
                </span>
                <span class="path col s6"> 
                  <%= ride.origin.capitalize %> to <%= ride.destination.capitalize %>
                </span>
                <span class="seats col s5">
                  <%= ride.seats_available %> seats available 
                </span>
                <span class="take-off col s7">
                  Takes off by <%= ride.take_off.strftime("%I:%M%p") %>
                </span>
                </div>
                <div class="card-action">
                <%= link_to 'Cancel Ride', "/interests/#{ride.id}",
                    method: :delete,
                    data: { confirm: 'Are you sure?' } 
                %>
                </div>
            </div>
            </div>
        </div>
       <% end %>
    </div>
</div>